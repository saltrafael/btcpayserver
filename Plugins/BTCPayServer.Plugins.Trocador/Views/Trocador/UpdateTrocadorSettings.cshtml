@using BTCPayServer.Abstractions.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BTCPayServer.Plugins.Trocador.UpdateTrocadorSettingsViewModel
@{
    ViewData.SetActivePage("Trocador", "Trocador", "Trocador");
}

<partial name="_StatusMessage" />

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="alert alert-warning mb-4" role="alert">
    If you are enabling Trocador support, we advise that you configure the invoice expiration to a minimum of 30 minutes
    as it may take longer than the default 15 minutes to convert the funds.
</div>

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <input asp-for="Enabled" type="checkbox" class="btcpay-toggle me-2" />
                    <label asp-for="Enabled" class="form-label mb-0 me-1"></label>
                </div>
            </div>

            @if (Model.Enabled is true)
            {
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <input asp-for="FiatDenominated" type="checkbox" class="btcpay-toggle me-2" />
                    <label asp-for="FiatDenominated" class="form-label mb-0 me-1">Do you want to denominate
                        it in fiat?</label>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center">
                    <label asp-for="ReferralCode" class="form-label mb-0 me-1">Your Referral Code, if you have one:</label>
                    <input asp-for="ReferralCode" class="form-control" />
                </div>
            </div>
            }
            
            <button name="command" type="submit" value="save" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>